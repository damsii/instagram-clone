<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iamdamjanmiloshevski.instagramclone.activity.OptionsActivity"
    tools:showIn="@layout/activity_options">

    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Account"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Edit Profile"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_edit_profile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Change Password"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:id="@+id/settings_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_change_password"
        android:layout_marginTop="10dp"
        android:background="#2f4f4f" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_divider"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Settings"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Language"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:id="@+id/about_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_language"
        android:layout_marginTop="10dp"
        android:background="#2f4f4f" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_divider"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="About"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="16sp" />

    <View
        android:id="@+id/log_out_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_about"
        android:layout_marginTop="10dp"
        android:background="#2f4f4f" />

    <TextView
        android:id="@+id/tv_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_out_divider"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Log out"
        android:textColor="#000080"
        android:textSize="16sp" />
</RelativeLayout>
