<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iamdamjanmiloshevski.instagramclone.activity.EditPhoneNumberActivity"
    tools:showIn="@layout/activity_edit_phone_number">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionGo"
            android:inputType="phone" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="You'll not receive SMS updates from Instagram, because this is a clone &amp; it's not related to Instagram at any case"
        android:textColor="#d3d3d3" />

</RelativeLayout>
